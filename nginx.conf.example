# Configuración de Nginx para ABC2Sense
# Copiar a: /etc/nginx/sites-available/abc2sense
# Luego: sudo ln -s /etc/nginx/sites-available/abc2sense /etc/nginx/sites-enabled/
# Y reiniciar: sudo systemctl restart nginx

server {
    listen 80;
    server_name 167.86.91.53;

    # Logs
    access_log /var/log/nginx/abc2sense_access.log;
    error_log /var/log/nginx/abc2sense_error.log;

    # Servir documentación de API directamente desde archivos estáticos
    location /api/docs {
        alias /root/sensor/ABC2Sense_backend/docs;
        index index.html;
        try_files $uri $uri/ /index.html;

        # Headers para archivos estáticos
        add_header Cache-Control "public, max-age=3600";
    }

    # Proxy para todas las rutas /api/* (excepto /api/docs)
    location /api/ {
        proxy_pass http://localhost:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Timeouts para operaciones largas (uploads de firmware)
        proxy_connect_timeout 600;
        proxy_send_timeout 600;
        proxy_read_timeout 600;
        send_timeout 600;

        # Aumentar tamaño máximo para uploads
        client_max_body_size 50M;
    }

    # Si tienes un frontend de React, descomenta esto:
    # location / {
    #     root /path/to/react/build;
    #     try_files $uri /index.html;
    # }
}
